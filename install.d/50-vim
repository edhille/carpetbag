#! /bin/bash

echo "Installing pathogen..."

mkdir -p ~/.vim/autoload ~/.vim/bundle
curl -Sso ~/.vim/autoload/pathogen.vim \
    https://raw.github.com/tpope/vim-pathogen/master/autoload/pathogen.vim

echo "Installing desertEx theme...."

mkdir -p ~/.vim/colors
curl -Sso ~/.vim/colors/desertEx.vim \
   http://www.vim.org/scripts/download_script.php?src_id=16802

echo "Add our favorite vim bundles..."

mkdir -p ~/.vim/bundle
pushd ~/.vim/bundle

install_bundle () {
   author_plugin=(${1//\// })

   if [ ! -d ~/.vim/bundle/${author_plugin[1]} ]; then
      git clone https://github.com/$1.git
   fi
}


install_bundle 'scrooloose/nerdtree'

install_bundle 'sleistner/vim-jshint'

install_bundle 'mklabs/grunt'

install_bundle 'vim-scripts/Auto-Pairs'

popd
