#! /bin/bash

echo "Installing pathogen..."

mkdir -p ~/.vim/autoload ~/.vim/bundle
curl -Sso ~/.vim/autoload/pathogen.vim \
    https://raw.github.com/tpope/vim-pathogen/master/autoload/pathogen.vim

echo "Installing desertEx theme...."

mkdir -p ~/.vim/colors
curl -Sso ~/.vim/colors/desertEx.vim \
   http://www.vim.org/scripts/download_script.php?src_id=16802

echo "Add our favorite vim bundles..."

mkdir -p ~/.vim/bundle
cd ~/.vim/bundle

if [ ! -d ~/.vim/bundle/nerdtree ]; then
   git clone https://github.com/scrooloose/nerdtree.git
fi

if [ ! -d ~/.vim/bundle/vim-javascript-syntax ]; then
   git clone https://github.com/jelera/vim-javascript-syntax.git
fi

if [ ! -d ~/.vim/bundle/vim-jshint ]; then
   git clone https://github.com/sleistner/vim-jshint.git
fi

if [ ! -d ~/.vim/bundle/grunt.vim ]; then
   git clone https://github.com/mklabs/grunt.vim.git
fi

if [ ! -d ~/.vim/bundle/auto-pairs ]; then
   git clone https://github.com/vim-scripts/Auto-Pairs.git
fi
